{
	"name": "autosupport-lsp-vscode",
	"description": "VSCode implementation of the generic language server for autosupport",
	"author": "Oscar Ablinger",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/AblingerOscar/autosupport-lsp-vscode"
	},
	"publisher": "AblingerOscar",
	"categories": [],
	"keywords": [
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"*"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Autosupport",
			"properties": {
				"autosupport-lsp-vscode.languageDefinitionFiles": {
					"scope": "machine-overridable",
					"type": "array",
					"items": {
						"type": "object",
						"title": "Language Definition File",
						"properties": {
							"languageId": {
								"type": "string",
								"description": "Usually the name of the language in lower case with no spaces"
							},
							"languageScheme": {
								"type": "string",
								"markdownDescription": "A [Uri scheme](https://code.visualstudio.com/api/references/vscode-api#Uri.scheme), like `file` or `untitled`."
							},
							"languagePattern": {
								"type": "string",
								"markdownDescription": "A [glob pattern](https://code.visualstudio.com/api/references/vscode-api#GlobPattern), like `*.{ts,js}`."
							},
							"definitionFilePath": {
								"type": "string",
								"description": "Absolute path to the definition file for this language"
							}
						}
					},
					"description": "Describes the paths to language definition files (Note: currently only one is supported â€“ the first entry will be taken)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^6.2.2",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.8.3"
	}
}
