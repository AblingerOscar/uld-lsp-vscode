{
	"name": "autosupport-lsp-vscode",
	"description": "VSCode implementation of the generic language server for autosupport",
	"author": "Oscar Ablinger",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/AblingerOscar/autosupport-lsp-vscode"
	},
	"publisher": "AblingerOscar",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"*"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Autosupport",
			"properties": {
				"autosupport-lsp-vscode.definitionFilePath": {
					"scope": "machine-overridable",
					"type": "string",
					"title": "Language Definition File path",
					"description": "Path to language definition file for the generic language server"
				},
				"autosupport-lsp-vscode.languageScheme": {
					"scope": "machine-overridable",
					"type": "string",
					"title": "Language Definition File scheme",
					"markdownDescription": "The [Uri scheme](https://code.visualstudio.com/api/references/vscode-api#Uri.scheme), like `file` or `untitled`.",
					"default": "file"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^6.2.2",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"xml2js": "^0.4.23"
	}
}
